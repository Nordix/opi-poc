{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
        "matchUpdateTypes": ["digest"],
        "automerge": true
    },
    {
      "matchPackagePatterns": ["opi-sztp-*"],
      "groupName": "OPI sztp dockers"
    }
  ]
}
